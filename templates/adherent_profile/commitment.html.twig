{% extends 'adherent_profile/_layout.html.twig' %}

{% form_theme form with 'form_theme_profile.html.twig' %}

{% block page_title 'Engagement' %}

{% block adherent_profile_content %}
    <section class="adherent-profile__section" id="engagement">
        <h1 class="text--medium-large">Engagement</h1>

        {{ form_start(form, {attr: {class: 'em-form'}}) }}
        <section class="em-form__section">
            <h2 class="section-subtitle">Modes d'engagement</h2>

            <p class="text--body b__nudge--top-0 text--gray">Vous vous engagez à LaREM en particulier pour</p>

            <div class="em-form__group">
                <label class="em-form__label">{{ 'adherent_commitment.commitmentActions.support_majority'|trans }}</label>
                {{ form_row(form.commitmentActions) }}
            </div>
            <div class="em-form__group">
                <label class="em-form__label">Débattre et proposer des idées</label>
                {{ form_row(form.debateAndProposeIdeasActions) }}
            </div>
            <div class="em-form__group">
                <label class="em-form__label">Agir pour son territoire</label>
                {{ form_row(form.actForTerritoryActions) }}
            </div>
            <div class="em-form__group">
                <label class="em-form__label">Faire gagner le progressisme aux élections</label>
                {{ form_row(form.progressivismActions) }}
            </div>
        </section>
        <section class="em-form__section">
            <h2 class="section-subtitle">Compétences</h2>
            <div class="em-form__group">
                <label class="em-form__label">Je peux aider les équipes LaREM pour</label>

                {{ form_row(form.skills) }}
            </div>
        </section>
        <section class="em-form__section">
            <h2 class="section-subtitle">Temps à disposition</h2>
            <div class="em-form__group">
                <label class="em-form__label">Votre temps disponible pour votre engagement est d'environ...</label>

                {{ form_row(form.availability) }}
            </div>
        </section>

        <button class="btn btn--blue">Enregistrer</button>

        {{ form_end(form) }}
    </section>
{% endblock %}
