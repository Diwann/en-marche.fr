<div class="manager__filters">
    <div class="manager__filters__form">
        {{ form_start(form) }}

        <h4 class="manager__filters__subtitle">Filtrer par</h4>

        {{ form_errors(form) }}

        <div class="manager__filters__row">
            <div class="manager__filters__section">
                <div class="manager__filters__group">
                    {% if form.thematicCommunities is defined %}
                    <div class="filter__row">
                        <label class="filter__label">Communautés gérées</label>
                        {{ form_widget(form.thematicCommunities, {attr: {class: 'filter__field multi_select2'}}) }}
                        {{ form_errors(form.thematicCommunities) }}
                    </div>
                    {% endif %}

                    <div class="filter__row">
                        <label class="filter__label">Rôle / Mandat</label>
                        {{ form_widget(form.role, {attr: {class: 'filter__field'}}) }}
                        {{ form_errors(form.role) }}
                    </div>

                    <div class="filter__row">
                        <label class="filter__label">Modes d'engagement</label>
                        {{ form_widget(form.motivations, {attr: {class: 'filter__field multi_select2'}}) }}
                        {{ form_errors(form.motivations) }}
                    </div>

                    <div class="filter__row">
                        <label class="filter__label">Catégories</label>
                        {{ form_widget(form.categories, {attr: {class: 'filter__field multi_select2'}}) }}
                        {{ form_errors(form.categories) }}
                    </div>

                    <div class="filter__row">
                        <label class="filter__label">Expert ?</label>
                        {{ form_widget(form.expert, {attr: {class: 'filter__field'}}) }}
                        {{ form_errors(form.expert) }}
                    </div>

                    <div class="filter__row">
                        <label class="filter__label">Association en lien ?</label>
                        {{ form_widget(form.with_association, {attr: {class: 'filter__field'}}) }}
                        {{ form_errors(form.with_association) }}
                    </div>
                </div>
            </div>

            <div class="manager__filters__section">
                <div class="manager__filters__group">
                    <div class="filter__row">
                        <label class="filter__label">Métier en lien ?</label>
                        {{ form_widget(form.with_job, {attr: {class: 'filter__field'}}) }}
                        {{ form_errors(form.with_job) }}
                    </div>

                    <div class="filter__row">
                        <label class="filter__label">Métier</label>
                        {{ form_widget(form.job, {attr: {class: 'filter__field multi_select2'}}) }}
                        {{ form_errors(form.job) }}
                    </div>

                    <div class="filter__row">
                        <label class="filter__label">Date d'adhésion</label>
                        <div class="filter__multi">
                            <label style="width: 45%">
                                {{ form_widget(form.joinedSince, {label: false, attr: {class: 'filter__field'}}) }}
                            </label>
                            à
                            <label style="width: 45%">
                                {{ form_widget(form.joinedUntil, {label: false, attr: {class: 'filter__field'}}) }}
                            </label>
                        </div>
                    </div>

                    <div class="filter__row">
                        <label class="filter__label">Statut Email</label>
                        {{ form_widget(form.emailSubscription, {attr: {class: 'filter__field'}}) }}
                        {{ form_errors(form.emailSubscription) }}
                    </div>

                    <div class="filter__row">
                        <label class="filter__label">Statut SMS</label>
                        {{ form_widget(form.smsSubscription, {attr: {class: 'filter__field'}}) }}
                        {{ form_errors(form.smsSubscription) }}
                    </div>
                </div>
            </div>

            <div class="manager__filters__section">
                <div class="manager__filters__group">
                    <div class="filter__row">
                        <label class="filter__label">Nom</label>
                        {{ form_widget(form.lastName, {attr: {class: 'filter__field', placeholder: 'Saisissez un nom'}}) }}
                        {{ form_errors(form.lastName) }}
                    </div>

                    <div class="filter__row">
                        <label class="filter__label">Prénom</label>
                        {{ form_widget(form.firstName, {attr: {class: 'filter__field', placeholder: 'Saisissez un prénom'}}) }}
                        {{ form_errors(form.firstName) }}
                    </div>

                    <div class="filter__row">
                        <label class="filter__label">Genre</label>
                        {{ form_widget(form.gender, {attr: {class: 'filter__radio__tabs inputs--4'}}) }}
                    </div>

                    <div class="filter__row">
                        <label class="filter__label">Âge</label>
                        <div class="filter__multi">
                            <label style="width: 45%">
                                {{ form_widget(form.ageMin, {label: false, attr: {class: 'filter__field', placeholder: 18}}) }}
                            </label>
                            à
                            <label style="width: 45%">
                                {{ form_widget(form.ageMax, {label: false, attr: {class: 'filter__field', placeholder: 99}}) }}
                            </label>
                        </div>
                    </div>

                    <div class="filter__row">
                        <label class="filter__label">Ville ou code postal</label>
                        {{ form_widget(form.city, {attr: {class: 'filter__field', placeholder: 'Exemple : 59300, Valenciennes, Tourcoing'}}) }}
                        {{ form_errors(form.city) }}
                    </div>

                    <div class="filter__row">
                        <label class="filter__label">Pays</label>
                        {{ form_widget(form.country, {attr: {class: 'filter__field'}}) }}
                        {{ form_errors(form.country) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="manager__filters__actions b__nudge--top">
            <button type="submit" class="btn btn--black b__nudge--bottom-medium">Appliquer</button>

            {% if form.vars.submitted %}
                <a href="{{ path('app_thematic_community_members_list') }}" class="btn btn--no-border b__nudge--bottom-medium">
                    Réinitialiser les filtres
                </a>
            {% endif %}
        </div>

        {{ form_end(form) }}
    </div>
</div>
